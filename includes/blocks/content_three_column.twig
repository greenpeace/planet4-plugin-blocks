{% block content_three_column %}
	{% if ( fields ) %}
		<section class="block split-three-column">
			<div class="container">
				{% if ( fields.title ) %}
					<header>
						<h2 class="page-section-header">{{ fields.title }}</h2>
					</header>
				{% endif %}
				{% if ( fields.description ) %}
					<div class="page-section-description">{{ fields.description|e('wp_kses_post')|raw }}</div>
				{% endif %}

				<div class="three-column-images row">
					<div class="col">
						<div class="first-column split-image">
							{% if ( fields.image_3 ) %}
								<img src="{{ fields.image_1 }}" alt="{{ fields.alt_1 }}">
							{% endif %}
						</div>
					</div>
					<div class="col">
						<div class="second-column split-image">
							{% if ( fields.image_2 ) %}
								<img src="{{ fields.image_2 }}" alt="{{ fields.alt_2 }}">
							{% endif %}
						</div>
					</div>
					<div class="col">
						<div class="third-column split-image">
							{% if ( fields.image_3 ) %}
								<img src="{{ fields.image_3 }}" alt="{{ fields.alt_3 }}">
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</section>
	{% endif %}
{% endblock %}
