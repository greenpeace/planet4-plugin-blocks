{% block subheader %}
	{% if ( fields ) %}
		<section class="block subheader">
			<div class="container">
				{% if ( fields.title ) %}
					<header>
						<h2 class="page-section-header">{{ fields.title }}</h2>
					</header>
				{% endif %}
                {% if ( fields.description ) %}
					<p class="page-section-description">{{ fields.description|e('wp_kses_post')|raw }}</p>
                {% endif %}
			</div>
		</section>
	{% endif %}
{% endblock %}
