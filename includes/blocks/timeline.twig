{% block timeline %}
	<section class="block timeline-block">
		{% if ( title ) %}
			<header>
				<h2 class="page-section-header">{{ title }}</h2>
			</header>
		{% endif %}
		{% if ( description ) %}
			<p class="page-section-description">{{ description|e('wp_kses_post')|raw }}</p>
		{% endif %}
		<div id="{{ timeline_id }}"></div>
	</section>
{% endblock %}
