{% block social_media %}
	<div class="social-media-block">
		{% if ( title ) %}
			<h2 class="page-section-header">{{ title }}</h2>
		{% endif %}
		<div class="social-media-embed">
			{% if ( embed_code ) %}
				{{ embed_code|raw }}
			{% elseif ( facebook_page_url ) %}
				<iframe src="https://www.facebook.com/plugins/page.php?href={{ facebook_page_url|url_encode }}&tabs=timeline&width=340&height=500&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId=1639847682730470"
						width="340"
						height="500"
						style="border:none;overflow:hidden"
						scrolling="no"
						frameborder="0"
						allowTransparency="true"
						allow="encrypted-media"></iframe>
			{% endif %}
		</div>
	</div>
{% endblock %}
