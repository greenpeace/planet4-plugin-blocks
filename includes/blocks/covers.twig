{% block covers %}

	{% if ( covers ) %}
		<div class="subheader">
			<div class="container">
				{% if ( fields.title ) %}
					<h2>{{ fields.title }}</h2>
				{% endif %}
				{% if ( fields.description ) %}
					<p>{{ fields.description|raw }}</p>
				{% endif %}
			</div>
		</div>
		<div class="covers-block">
			<div class="container">
				{% set covers_per_row = is_mobile ? 2 : 3 %}
				{% for cover in covers %}
					{% if loop.index0 == 0 %}
						<div class="row">
					{% elseif loop.index0 % covers_per_row == 0 and loop.index0 > covers_per_row %}
						<div class="row row-hidden" style="display: none;">
					{% endif %}
					<div class="col-lg-4 col-md-6">
						<div class="cover-card" style="background-image: url({{ cover.image }});">
							{% if ( cover.tags ) %}
								{% for tag in cover.tags %}
									<a class="cover-card-tag" href="{{ tag.href }}">#{{ tag.name|e('wp_kses_post')|raw }}</a>
								{% endfor %}
							{% endif %}
							<h2 class="cover-card-heading">{{ cover.title|raw }}</h2>
							<p>{{ cover.excerpt|truncate(25)|e('wp_kses_post')|raw }}</p>
							<a class="btn btn-primary btn-transparent btn-block cover-card-btn" href="{{ cover.button_link }}">{{ cover.button_text }}</a>
						</div>
					</div>
					{% if ( ( loop.index0 % covers_per_row == (covers_per_row - 1) and loop.index0 > covers_per_row ) or loop.last) %}
						</div>
					{% endif %}
				{% endfor %}
				{% if ( covers|length > covers_per_row and fields.button_text ) %}
					<div class="col-lg-4 col-md-6 mb-5 load-more-button-div">
						<button class="btn btn-block btn-medium btn-small btn-transparent btn-load-more-covers btn-load-more">{{ fields.button_text }}</button>
					</div>
				{% endif %}
			</div>
		</div>
	{% endif %}
	<div class="clear"></div>

{% endblock %}
