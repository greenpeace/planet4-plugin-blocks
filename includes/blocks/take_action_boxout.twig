{% block take_action_boxout %}

	{% if ( page ) %}

		{% if ( page.image ) %}
			{% set bg_image = 'style="background-image: url(\''~page.image~'\');"' %}
		{% else %}
			{% set bg_image = '' %}
		{% endif %}
		<div class="cover-card single-cover dark-card-bg" {{ bg_image|raw }}>
			{% if ( page.first_tag and page.first_tag_link ) %}
				<a href="{{ page.first_tag_link }}" class="cover-card-tag">#{{ page.first_tag }}</a>
			{% endif %}
			{% if ( page.title ) %}
				<h2 class="cover-card-heading">{{ page.title }}</h2>
			{% endif %}
			{% if ( page.excerpt ) %}
				<p>{{ page.excerpt|excerpt(25)|raw }}</p>
			{% endif %}
			{% if ( page.link ) %}
				<a class="btn btn-action btn-block cover-card-btn" href="{{ page.link }}">
					{{ __('take action', 'planet4-master-theme') }}
				</a>
			{% endif %}
		</div>
	{% endif %}

{% endblock %}
