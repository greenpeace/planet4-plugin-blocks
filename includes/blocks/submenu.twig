{% block submenu %}

	{% if ( menu ) %}
		<div class="submenu-block
			{% if style == 1 %}submenu-long{% endif %}
			{% if style == 2 %}submenu-short{% endif %}
			{% if style == 3 %}submenu-sidebar{% endif %}">

			{% if ( title ) %}
				<h2>{{ title }}</h2>
			{% endif %}

			{{ _self.show_menu(menu) }}
		</div>

		<a href="#" class="back-top">&nbsp;</a>
	{% endif %}

{% endblock %}

{% macro show_menu(items) %}
	<ul>
		{% for item in items %}
			<li class="list-style-{{ item.style }} {% if item.link %}list-link{% else %}list-heading{% endif %}">
				{% if ( item.link ) %}
					<a href="#{{ item.id }}" class="icon-link submenu-link">{{ item.text }}</a>
				{% else %}
					<span class="submenu-heading">{{ item.text }}</span>
				{% endif %}
				{% if ( item.children ) %}
					{{ _self.show_menu(item.children) }}
				{% endif %}
			</li>
		{% endfor %}
	</ul>
{% endmacro %}
