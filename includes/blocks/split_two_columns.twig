{% block split_two_columns %}

{% if ( issue ) %}
	<div class="split-two-column">
		<div class="split-two-column-item item--left">
			{% if ( issue.image ) %}
				{% if ( issue.focus ) %}
						<div class="split-two-column-item-image" style="background-image:url({{ issue.image }}); background-position:{{ issue.focus }};"></div>
				{% else %}
						<div class="split-two-column-item-image" style="background-image:url({{ issue.image }});"></div>
				{% endif %}
			{% endif %}
			<div class="split-two-column-item-content">
				{% if ( issue.title ) %}
					<h2 class="split-two-column-item-title">
						{% if ( issue.link_url ) %}
							<a href="{{ issue.link_url }}">{{ issue.title }}</a>
						{% else %}
							{{ issue.title }}
						{% endif %}
					</h2>
				{% endif %}
				{% if ( issue.description ) %}
					<p class="split-two-column-item-subtitle">{{ issue.description|truncate(25, true)|raw }}</p>
				{% endif %}
				{% if ( issue.link_text and issue.link_url ) %}
					<a class="split-two-column-item-link" href="{{ issue.link_url }}">{{ issue.link_text }}</a>
				{% endif %}
			</div>
		</div>
		<div class="split-two-column-item item--right">
			{% if ( campaign.image ) %}
				{% if ( campaign.focus ) %}
					<div class="split-two-column-item-image" style="background-image:url({{ campaign.image }}); background-position:{{ campaign.focus }};" srcset="{{ campaign.srcset }}"></div>
				{% else %}
					<div class="split-two-column-item-image" style="background-image:url({{ campaign.image }});" srcset="{{ campaign.srcset }}"></div>
				{% endif %}
			{% endif %}
			<div class="split-two-column-item-content">
				{% if ( campaign.name ) %}
					<a class="split-two-column-item-tag" href="{{ campaign.link }}">#{{ campaign.name }}</a>
				{% endif %}
				{% if ( campaign.description ) %}
					<p class="split-two-column-item-subtitle">{{ campaign.description|truncate(25, true)|raw }}</p>
				{% endif %}
				{% if ( campaign.button_text and campaign.button_link ) %}
					<a class="btn btn-small btn-medium btn-primary btn-block split-two-column-item-button" href="{{ campaign.button_link }}">{{ campaign.button_text }}</a>
				{% endif %}
			</div>
		</div>
	</div>
{% endif %}

{% endblock %}

